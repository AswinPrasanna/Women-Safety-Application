<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity">


    <View
        android:layout_marginStart="-20dp"
        android:layout_marginTop="-30dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/topleftoval"
        android:background="@drawable/top_left_corner_oval"
        tools:ignore="VisualLintBounds" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Women_Safety"
        android:textSize="45sp"
        android:layout_centerHorizontal="true"
        android:textColor="#803A99"
        android:textStyle="bold"
        android:layout_above="@id/sparkImg"
        android:id="@+id/sparkText"
        android:fontFamily="cursive"/>

    <ImageView
        android:layout_width="600px"
        android:layout_height="700px"
        android:layout_centerVertical="true"
        android:paddingStart="30dp"
        android:src="@drawable/istockphoto_1056400830_612x612"
        android:id="@+id/sparkImg"
        android:layout_centerHorizontal="true"
        android:importantForAccessibility="no"
        tools:ignore="PxUsage,RtlSymmetry" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/slang"
        android:layout_below="@id/sparkImg"
        android:text="@string/safety_fits_like_a_glove_try_one_on"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/get_started"
        android:layout_centerHorizontal="true"
        android:id="@+id/btnGetStarted"
        android:layout_marginTop="40px"
        android:layout_below="@id/slang"
        tools:ignore="PxUsage" />



</RelativeLayout>